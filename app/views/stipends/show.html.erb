<p class="position-absolute" style="color: green"><%= notice %></p>
<%= render "shared/header", show_gradient: false %>
<%= link_to "Back to stipends", stipends_path, class: "btn btn-primary m-2"  %>
<div class="container row">
  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Amount </div>
    <div class="m-1 "><%= @stipend.amount %></div>
  </div>

  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Month </div>
    <div class="m-1"><%= @stipend.stipend_in %></div>
  </div>

  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Payment Method </div>
    <div class="m-1"><%= @stipend.payment_method %></div>
  </div>

  <div class="d-flex col-md-6">  
    <div class="m-1 fw-bold">Recevied At </div>
    <div class="m-1"><%= @stipend.recevied_at %></div>
  </div>

  <div class="d-flex col-md-6">  
    <div class="m-1 fw-bold">Recevied By </div>
    <div class="m-1"><%= @stipend.recevied_by %></div>
  </div>
  <div class="">
    <%= link_to "Edit", edit_stipend_path(@stipend), class: "btn btn-primary m-2" %>
    <%= button_to "Destroy", @stipend, method: :delete, class: "btn btn-danger m-2" %>
  </div>
</div>

<%= render "shared/footer" %>
