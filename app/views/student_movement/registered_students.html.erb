<%= render "shared/header", show_gradient: nil %>
<h1>Students in approval list (Count: <%= @students.count %>)</h1>
<div id="students" class="m-3 height-400px">
  <table class="table table-striped">
    <thead>
      <th>Name</th>
      <th>Approved The Student</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </thead>
  <tbody class="table-group-divider">
    <% @students.each do |student| %>
      <%= render "student", student:, list: "registered" %>
    <% end %>
  </tbody>
  </table>
</div>
<%= will_paginate @students, list_classes: %w(pagination justify-content-center) %>

<%= link_to "New student", new_student_path, class: "btn btn-primary m-2" %>
<%= render "shared/footer" %>
