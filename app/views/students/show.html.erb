<%= render "shared/header", show_gradient: false %>
<%= link_to "Back to students", students_path, class: "btn btn-primary m-2"  %>
<div class="container row">
  <div class="d-flex col-md-6">
    <div class="m-1 fw-bold">Name </div>
    <div class="m-1 "><%= "#{@student.name}#{@student.father_name}" %></div>
  </div>

  <div class="d-flex col-md-6">  
    <div class="m-1 fw-bold">Father Occupation </div>
    <div class="m-1"><%= @student.father_occupation %></div>
  </div>

  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Mobile Number </div>
    <div class="m-1 "><%= @student.mobile_number %></div>
  </div>

  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Jazzcash Number </div>
    <div class="m-1"><%= @student.jazzcash_number %></div>
  </div>

  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Emergency Number </div>
    <div class="m-1"><%= @student.emergency_number %></div>
  </div>

  <div class="d-flex col-md-6">  
    <div class="m-1 fw-bold">CNIC </div>
    <div class="m-1"><%= @student.cnic %></div>
  </div>

  <div class="d-flex col-md-6">  
    <div class="m-1 fw-bold">Address </div>
    <div class="m-1"><%= @student.address %></div>
  </div>

  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Registered At </div>
    <div class="m-1"><%= @student.registered_at %></div>
  </div>

  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Stipend Start At </div>
    <div class="m-1"><%= @student.stipend_start_at %></div>
  </div>

  <div class="d-flex col-md-4">  
    <div class="m-1 fw-bold">Stipend End At </div>
    <div class="m-1"><%= @student.stipend_end_at %></div>
  </div>

  <div class="d-flex col-md-12">  
    <div class="m-1 fw-bold">State </div>
    <div class="m-1"><%= @student.state %></div>
  </div>

  <div class="d-flex">
    <%= link_to "Edit", edit_student_path(@student), class: "btn btn-primary m-2" %>
    <%= button_to "Destroy", @student, method: :delete, class: "btn btn-danger m-2" %>
  </div>
</div>
  <%= render 'stipends/student_stipends', stipends: @student.stipends %>

<%= render "shared/footer" %>
